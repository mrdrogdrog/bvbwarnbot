{
  "name": "bvbwarnbot",
  "version": "1.0.0",
  "description": "Scraps data from bvb.de and sends notifications to channels",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "dotenv -- node dist/index.mjs",
    "format": "prettier -c src/*.mts",
    "format:fix": "prettier -c src/*.mts -w",
    "dev": "dotenv -- node --loader ts-node/esm src/index.mts",
    "test": "vitest"
  },
  "author": "Tilman Vatteroth <git@tilmanvatteroth.de>",
  "license": "MIT",
  "dependencies": {
    "consola": "3.4.0",
    "ejs": "3.1.10",
    "luxon": "3.5.0",
    "matrix-bot-sdk": "0.7.1",
    "node-cron": "3.0.3",
    "telegraf": "4.16.3"
  },
  "devDependencies": {
    "@types/ejs": "3.1.5",
    "@types/luxon": "3.4.2",
    "@types/node-cron": "3.0.11",
    "dotenv-cli": "8.0.0",
    "husky": "9.1.7",
    "prettier": "3.4.2",
    "typescript": "5.6.3",
    "vitest": "3.0.7",
    "ts-node": "10.9.2"
  }
}
